#include <stdio.h>

#define MAX_PRODUCTS 100

int main() {
    int numProducts;
    int stock[MAX_PRODUCTS];
    int sales[MAX_PRODUCTS];
    int i;
    int totalStock = 0;
    int queryID;

    // 상품 개수 입력
    printf("상품 개수 입력: ");
    scanf("%d", &numProducts);

    // 유효성 검사
    if (numProducts < 1 || numProducts > MAX_PRODUCTS) {
        printf("상품 개수가 유효 범위를 초과합니다.\n");
        return 1;
    }

    // 상품별 입고 수량 입력
    printf("상품 별 입고수량 입력: ");
    for (i = 0; i < numProducts; i++) {
        scanf("%d", &stock[i]);
    }

    // 상품별 판매 수량 입력
    printf("상품 별 판매수량 입력: ");
    for (i = 0; i < numProducts; i++) {
        scanf("%d", &sales[i]);
    }

    // 재고 계산
    for (i = 0; i < numProducts; i++) {
        stock[i] -= sales[i];
    }

    // 특정 ID의 재고 수량 출력
    printf("ID 입력: ");
    scanf("%d", &queryID);

    // 유효성 검사
    if (queryID < 1 || queryID > numProducts) {
        printf("유효하지 않은 ID입니다.\n");
        return 1;
    }

    printf("상품 ID %d의 재고수량: %d\n", queryID, stock[queryID - 1]);

    // 전체 재고 수량 출력
    for (i = 0; i < numProducts; i++) {
        totalStock += stock[i];
    }
    printf("전체 재고수량: %d\n", totalStock);

    return 0;
}
