#include <stdio.h>
#include <string.h>

#define MAX_PRODUCTS 5

typedef struct {
    int id;
    char name[30];
    int price;
    int stock;
    int sold;
    int total_sales;
} Product;

Product products[MAX_PRODUCTS];
int product_count = 0;

void initialize_products() {
    for (int i = 0; i < MAX_PRODUCTS; i++) {
        products[i].id = 0;
        strcpy(products[i].name, "");
        products[i].price = 0;
        products[i].stock = 0;
        products[i].sold = 0;
        products[i].total_sales = 0;
    }
}

void add_stock() {
    int id, quantity, price;
    char name[30];
    if (product_count >= MAX_PRODUCTS) {
        printf("더 이상 상품을 추가할 수 없습니다.\n");
        return;
    }
    printf("상품ID: ");
    scanf("%d", &id);
    printf("상품명: ");
    scanf("%s", name);
    printf("입고량: ");
    scanf("%d", &quantity);
    printf("판매가격: ");
    scanf("%d", &price);
    
    products[product_count].id = id;
    strcpy(products[product_count].name, name);
    products[product_count].stock = quantity;
    products[product_count].price = price;
    product_count++;
    printf("상품이 입고되었습니다.\n");
}

void sell_product() {
    int id, quantity;
    printf("상품ID: ");
    scanf("%d", &id);
    printf("판매량: ");
    scanf("%d", &quantity);
    
    for (int i = 0; i < product_count; i++) {
        if (products[i].id == id) {
            if (products[i].stock >= quantity) {
                products[i].stock -= quantity;
                products[i].sold += quantity;
                products[i].total_sales += quantity * products[i].price;
                printf("판매가 완료되었습니다.\n");
            } else {
                printf("재고가 부족합니다.\n");
            }
            return;
        }
    }
    printf("해당 ID의 상품이 없습니다.\n");
}

void display_product_info() {
    int id;
    printf("상품ID: ");
    scanf("%d", &id);
    
    for (int i = 0; i < product_count; i++) {
        if (products[i].id == id) {
            printf("상품명: %s, 가격: %d, 재고량: %d, 판매량: %d, 총 판매금액: %d\n",
                   products[i].name, products[i].price, products[i].stock, products[i].sold, products[i].total_sales);
            return;
        }
    }
    printf("해당 ID의 상품이 없습니다.\n");
}

void display_all_products() {
    for (int i = 0; i < product_count; i++) {
        printf("ID: %d, 상품명: %s, 재고량: %d, 판매량: %d, 총 판매금액: %d\n",
               products[i].id, products[i].name, products[i].stock, products[i].sold, products[i].total_sales);
    }
}

int main() {
    int choice;
    initialize_products();
    while (1) {
        printf("메뉴를 선택하세요 (1: 입고, 2: 판매, 3: 개별현황, 4: 전체현황, 5: 종료): ");
        scanf("%d", &choice);
        
        switch (choice) {
            case 1:
                add_stock();
                break;
            case 2:
                sell_product();
                break;
            case 3:
                display_product_info();
                break;
            case 4:
                display_all_products();
                break;
            case 5:
                printf("프로그램을 종료합니다.\n");
                return 0;
            default:
                printf("잘못된 입력입니다.\n");
        }
    }
}
